@page "/games"

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Games</MudText>
    <MudText Align="Align.Center">Games made by me.</MudText>
    <MudGrid Class="mt-8">
        @foreach (var game in _games)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="25" Class="rounded-lg pb-4">
                    <MudCardMedia Image="@game.Image" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h5">@game.Title</MudText>
                        <MudText Typo="Typo.body2">@game.Description</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="@game.Link" Variant="Variant.Text" Color="Color.Primary">Play</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {

    private List<Game> _games = new()
    {
        new()
        {
            Title = "Prototype 1 - Scene 1",
            Description = "Coop Car Scene",
            Image = "images/Unity.webp",
            Link = "/games/prototype-1-scene-1"
        },
        new()
        {
            Title = "Prototype 1 - Scene 2",
            Description = "Poor flappy bird plane game",
            Image = "images/Unity.webp",
            Link = "/games/prototype-1-scene-2"
        },
        new()
        {
            Title = "Prototype 2",
            Description = "Feed as many animals as possible without dying",
            Image = "images/Unity.webp",
            Link = "/games/prototype-2"
        },
    };

    public class Game
    {
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Image { get; set; } = "";
        public string Link { get; set; } = "";
    }

}